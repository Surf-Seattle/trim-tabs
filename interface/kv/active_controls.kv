
<ActiveBar>
#    size_hint: (None, None)
#    height: dp(65)

    MDBoxLayout:
        orientation: 'horizontal'
        padding: [150, 0, 150, 0]  # [left, top, right, bottom]
        adaptive_width: False
        adaptive_height: True
        pos_hint: {"center_x": .5, "bottom": .35}
        md_bg_color: gch("#9C0000")
        background_palette: "DeepPurple"
        background_hue: "A400"
        # Control Surface Name
        MyMDLabel:

            id: profile_name
            font_style: "H4"
            text: root.profile_name
            halign: "left"
            valign: "middle"
            theme_text_color: "Custom"
            text_color: gch("#DCDBDB")

        AnchorLayout:
            size_hint_y: None
            height: retract_button.height + 20
            MDFillRoundFlatIconButton:
                id: retract_button
                text: "Retract"
                icon: "stop-circle-outline"
                pos_hint: {"center_x": .5}
                padding: dp(20)
                on_release: root.retract()
                # colors
                md_bg_color: gch("#DCDBDB")
                theme_text_color: "Custom"
                text_color: gch("#9C0000")

        AnchorLayout:
            size_hint_y: None
            height: goofy_button.height + 20
            MDFillRoundFlatIconButton:
                id: goofy_button
                text: "Goofy"
                icon: "ray-start-arrow"
                pos_hint: {"center_x": .5}
                padding: [0, 20, 0, 20]
                on_release: root.invert()
                # colors
                md_bg_color: gch("#DCDBDB")
                theme_text_color: "Custom"
                text_color: gch("#9C0000")

        AnchorLayout:
            size_hint_y: None
            height: regular_button.height + 20
            MDFillRoundFlatIconButton:
                id: regular_button
                text: "Regular"
                icon: "ray-end-arrow"
                pos_hint: {"center_x": .5}
                padding: [0, 20, 0, 20]
                on_release: root.invert()
                # colors
                md_bg_color: gch("#DCDBDB")
                theme_text_color: "Custom"
                text_color: gch("#9C0000")

